<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <ru.euphoriadev.vk.view.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_centerVertical="true"
        app:autoProgress="false"
        app:loadedColor="#11FFFFFF"
        app:maxProgress="100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/ibPlayAudio"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_play_arrow"
            style="?android:attr/borderlessButtonStyle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvArtist_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="?android:textColorPrimary"
                android:text="Red"/>

            <TextView
                android:id="@+id/tvTitle_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?android:textColorSecondary"
                android:text="Three Seconds"/>

        </LinearLayout>

        <Button
            android:id="@+id/tvTime_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="03:53"
            android:textSize="12sp"
            android:visibility="gone"/>


    </LinearLayout>
</FrameLayout>

