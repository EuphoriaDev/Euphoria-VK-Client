<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:elevation="4dp"
              android:translationZ="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <ImageView android:layout_width="match_parent"
                   android:src="@drawable/camera_b"
                   android:scaleType="centerCrop"
                   android:layout_gravity="center|bottom"
                   android:id="@+id/ivProfilePhoto"
                   android:layout_height="260dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      android:layout_gravity="bottom|left"
                      android:paddingLeft="16dp"
                      android:paddingTop="12dp"
                      android:paddingBottom="16dp"
                      android:background="@drawable/profile_header_gradient"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="User Name"
                      android:id="@+id/tvProfileName"
                      android:textStyle="bold"
                      android:gravity="left"
                      android:textSize="26dp"
                      android:shadowDy="1"
                      android:shadowRadius="1"
                      android:shadowDx="1"
                      android:shadowColor="@android:color/black"
                      android:layout_gravity="left|bottom"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="Status"
                      android:gravity="left"
                      android:shadowDy="1"
                      android:shadowRadius="1"
                      android:shadowDx="1"
                      android:shadowColor="@android:color/black"
                      android:textStyle="italic"
                      android:id="@+id/tvProfileStatus"
                      android:textSize="16dp"
                      android:layout_gravity="left"
                      android:layout_marginTop="3dp"
                      android:layout_height="wrap_content"/>


        </LinearLayout>

        <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_profile"
                android:title=""
                android:background="@android:color/transparent"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:minHeight="?attr/actionBarSize"/>

    </FrameLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:background="@android:color/holo_red_dark"
                  android:padding="16dp"
                  android:id="@+id/llProfileBackground"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="16dp"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="0dp"
                      android:textStyle="bold"
                      android:text="Друзья\n-"
                      android:id="@+id/tvProfileFriends"
                      android:gravity="center"
                      android:textSize="24sp"
                      android:layout_weight="1"
                      android:textColor="@color/secondary_text_default_material_dark"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="0dp"
                      android:textStyle="bold"
                      android:text="Аудио\n-"
                      android:id="@+id/tvProfileAudios"
                      android:gravity="center"
                      android:textSize="24sp"
                      android:layout_weight="1"
                      android:textColor="@color/secondary_text_default_material_dark"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="0dp"
                      android:textStyle="bold"
                      android:text="Видио\n-"
                      android:id="@+id/tvProfileVideos"
                      android:gravity="center"
                      android:textSize="24sp"
                      android:layout_weight="1"
                      android:textColor="@color/secondary_text_default_material_dark"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>