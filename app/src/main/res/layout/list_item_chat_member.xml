<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:padding="16dp"
              android:layout_height="match_parent">

    <ru.euphoriadev.vk.view.CircleImageView
            android:layout_width="40dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/camera_b"
            android:id="@+id/ivChatMember"
            android:layout_height="40dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="Павел Дуров"
                  android:id="@+id/tvChatMemberTitle"
                  android:textStyle="bold"
                  android:layout_marginBottom="6dp"
                  android:textColor="?android:textColorPrimary"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Пригласил Гришка"
                  android:id="@+id/tvChatMemberInvitedBy"
                  android:textStyle="italic"
                  android:textColor="?android:textColorSecondary"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageButton android:layout_width="45dp"
                 android:src="@android:drawable/ic_menu_delete"
                 android:layout_height="45dp"/>
</LinearLayout>